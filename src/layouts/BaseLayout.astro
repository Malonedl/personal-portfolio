---
import "../styles/global.css";

const {
  title = "Placeholder Site",
  description = "personal portfolio.",
} = Astro.props;

const navLinks = [
  { label: "Home", href: "/" },
  { label: "Projects", href: "/projects" },
  { label: "Experience", href: "/experience" },
  { label: "Writing", href: "/writing" },
  { label: "Resume", href: "/resume" },
  { label: "Contact", href: "/contact" },
];

const normalizePath = (path) => {
  if (!path) return "/";
  const trimmed = path.endsWith("/") && path.length > 1 ? path.slice(0, -1) : path;
  return trimmed || "/";
};

const currentPath = normalizePath(Astro.url.pathname);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <a class="skip-link" href="#main-content">Skip to content</a>

    <header class="site-header">
      <div class="site-shell">
        <a class="site-title" href="/">Placeholder Site</a>
        <nav class="site-nav" aria-label="Main">
          <ul>
            {navLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  class={
                    normalizePath(link.href) === currentPath
                      ? "nav-link is-active"
                      : "nav-link"
                  }
                  aria-current={normalizePath(link.href) === currentPath ? "page" : undefined}
                >
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </nav>
      </div>
    </header>

    <main id="main-content" class="site-main">
      <slot />
    </main>

    <footer class="site-footer">
      <div class="site-shell footer-content">
        <p>¬© 2026 Placeholder Site. All rights reserved.</p>
        <div class="footer-links" aria-label="Social links">
          <a href="mailto:hello@example.com">
            <span aria-hidden="true">‚úâÔ∏è</span>
            Email
          </a>
          <a href="https://github.comr">
            <span aria-hidden="true">üêô</span>
            GitHub
          </a>
          <a href="https://www.linkedin.com/">
            <span aria-hidden="true">üíº</span>
            LinkedIn
          </a>
        </div>
      </div>
    </footer>
  </body>
</html>

<style>
  :global(:root) {
    color-scheme: light;
    font-family: "Inter", "Segoe UI", system-ui, sans-serif;
    line-height: 1.5;
    background-color: #f8f8f8;
    color: #1c1c1c;
  }

  :global(*, *::before, *::after) {
    box-sizing: border-box;
  }

  :global(body) {
    margin: 0;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  :global(a) {
    color: inherit;
    text-decoration: none;
  }

  :global(a:focus-visible, button:focus-visible, input:focus-visible, textarea:focus-visible) {
    outline: 3px solid #2d6cdf;
    outline-offset: 3px;
  }

  .skip-link {
    position: absolute;
    top: -40px;
    left: 16px;
    padding: 8px 12px;
    background: #1c1c1c;
    color: #fff;
    border-radius: 999px;
    font-size: 0.9rem;
    transition: top 0.2s ease;
    z-index: 100;
  }

  .skip-link:focus {
    top: 16px;
  }

  .site-shell {
    width: min(1200px, 92vw);
    margin: 0 auto;
  }

  .site-header {
    background: #ffffff;
    border-bottom: 1px solid #e4e4e4;
  }

  .site-header .site-shell {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    gap: 16px;
    padding: 20px 0;
  }

  .site-title {
    font-weight: 700;
    font-size: 1.25rem;
  }

  .site-nav ul {
    list-style: none;
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
    padding: 0;
    margin: 0;
  }

  .nav-link {
    display: inline-flex;
    align-items: center;
    padding: 6px 12px;
    border-radius: 999px;
    background: transparent;
    color: #2b2b2b;
    font-weight: 500;
    transition: background 0.2s ease, color 0.2s ease;
  }

  .nav-link:hover {
    background: #f1f1f1;
  }

  .nav-link.is-active {
    background: #1c1c1c;
    color: #ffffff;
  }

  .site-main {
    flex: 1;
    padding: 48px 0;
  }

  .site-main :global(.content-shell) {
    width: min(1000px, 90vw);
    margin: 0 auto;
  }

  .site-footer {
    background: #ffffff;
    border-top: 1px solid #e4e4e4;
    padding: 24px 0 32px;
  }

  .footer-content {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    gap: 16px;
  }

  .footer-links {
    display: flex;
    gap: 16px;
  }

  .footer-links a {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 6px 10px;
    border-radius: 8px;
    background: #f5f5f5;
    font-size: 0.95rem;
  }
</style>
