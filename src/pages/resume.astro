---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Resume" description="Download Resume.">
  <section class="content-shell resume-shell">
    <header class="resume-header">
      <div>
        <p class="eyebrow">Resume</p>
        <h1>Resume preview</h1>
        <p>
          This page embeds a resume PDF. Use the download link below to grab the
          file directly.
        </p>
      </div>
      <a class="download-link" href="/resume.pdf" download>Download Resume</a>
    </header>

    <div class="resume-embed">
      <object data="/resume.pdf" type="application/pdf" aria-label="Embedded resume PDF">
        <p>
          The resume PDF could not be embedded. You can still
          <a href="/resume.pdf" download>download the resume here</a>.
        </p>
      </object>
    </div>
  </section>
</BaseLayout>

<style>
  .resume-shell {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  .resume-header {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: flex-end;
    gap: 16px;
  }

  .resume-header h1 {
    margin: 0 0 8px;
    font-size: clamp(2rem, 4vw, 2.75rem);
  }

  .resume-header p {
    margin: 0;
    max-width: 60ch;
    color: #4a4a4a;
  }

  .eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.08em;
    font-weight: 600;
    color: #6a6a6a;
    margin: 0 0 8px;
    font-size: 0.8rem;
  }

  .download-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 20px;
    border-radius: 999px;
    background: #1c1c1c;
    color: #ffffff;
    font-weight: 600;
    min-width: 180px;
    text-align: center;
  }

  .resume-embed {
    border-radius: 16px;
    overflow: hidden;
    border: 1px solid #e4e4e4;
    background: #ffffff;
    min-height: 70vh;
  }

  .resume-embed object {
    width: 100%;
    height: 100%;
    min-height: 70vh;
    display: block;
  }

  .resume-embed p {
    padding: 32px;
    margin: 0;
  }

  .resume-embed a {
    color: #2d6cdf;
    font-weight: 600;
  }
</style>
