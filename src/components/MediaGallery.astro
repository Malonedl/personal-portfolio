---
const { images = [] } = Astro.props as {
  images?: string[];
};
---

{
  images.length > 0 ? (
    <div class="media-gallery">
      {images.map((image: string, index: number) => (
        <figure>
          <img src={image} alt={`Project media ${index + 1}`} loading="lazy" />
        </figure>
      ))}
    </div>
  ) : (
    <p class="media-empty">Media coming soon.</p>
  )
}

<style>
  .media-gallery {
    display: grid;
    gap: 16px;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  }

  .media-gallery figure {
    margin: 0;
    border-radius: 16px;
    overflow: hidden;
    border: 1px solid #e4e4e4;
    background: #f7f7f7;
    min-height: 160px;
  }

  .media-gallery img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .media-empty {
    color: #4a4a4a;
    font-style: italic;
  }
</style>
