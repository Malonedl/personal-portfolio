---
import TagPill from "./TagPill.astro";

type ProjectLinks = {
  demo?: string;
  github?: string;
  pdf?: string;
  slides?: string;
};

type ProjectButton = {
  label: string;
  href: string;
};

const {
  title,
  summary,
  tags = [],
  links = {},
  caseStudyUrl,
  dataTags = "",
} = Astro.props as {
  title: string;
  summary: string;
  tags?: string[];
  links?: ProjectLinks;
  caseStudyUrl?: string;
  dataTags?: string;
};

const { demo, github, pdf, slides } = links;

const buttons = [
  caseStudyUrl ? { label: "Case Study", href: caseStudyUrl } : null,
  demo ? { label: "Demo", href: demo } : null,
  github ? { label: "GitHub", href: github } : null,
  pdf ? { label: "PDF", href: pdf } : null,
  slides ? { label: "Slides", href: slides } : null,
].filter((button): button is ProjectButton => Boolean(button));
---

<article class="project-card" data-project-card data-tags={dataTags}>
  <div>
    <h3>{title}</h3>
    <p>{summary}</p>
  </div>

  <div class="project-tags">
    {tags.map((tag: string) => <TagPill label={tag} />)}
  </div>

  {
    buttons.length > 0 && (
      <div class="project-actions">
        {buttons.map((button: ProjectButton) => (
          <a class="project-button" href={button.href}>
            {button.label}
          </a>
        ))}
      </div>
    )
  }
</article>

<style>
  .project-card {
    display: flex;
    flex-direction: column;
    gap: 16px;
    padding: 24px;
    border-radius: 16px;
    border: 1px solid #e4e4e4;
    background: #ffffff;
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.04);
    transition:
      transform 0.2s ease,
      box-shadow 0.2s ease;
  }

  .project-card h3 {
    margin: 0 0 8px;
    font-size: 1.3rem;
  }

  .project-card p {
    margin: 0;
    color: #4a4a4a;
  }

  .project-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 16px 36px rgba(0, 0, 0, 0.08);
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
  }

  .project-actions {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
  }

  .project-button {
    display: inline-flex;
    align-items: center;
    padding: 8px 14px;
    border-radius: 999px;
    border: 1px solid #1c1c1c;
    font-weight: 600;
    font-size: 0.9rem;
    transition:
      background 0.2s ease,
      color 0.2s ease;
  }

  .project-button:hover {
    background: #1c1c1c;
    color: #ffffff;
  }

  .project-card[data-hidden="true"] {
    display: none;
  }
</style>
